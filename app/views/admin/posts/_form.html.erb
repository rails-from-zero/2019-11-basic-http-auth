<% if post.errors.any? %>
  <ul class="errors">
    <% post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [:admin, post] do |f| %>
  <p><%= f.text_field :title, placeholder: "Title" %></p>
  <p><%= f.text_area :body, placeholder: "Body" %></p>
  <p><%= f.submit "Save" %></p>
<% end %>
